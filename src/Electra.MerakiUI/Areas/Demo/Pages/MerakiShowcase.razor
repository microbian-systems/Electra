<div class="space-y-16">
    <!-- Navbars Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Navbars</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>
        
        <div class="space-y-12">
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Simple Navbar</h3>
                <div class="border border-slate-800 rounded-xl overflow-hidden bg-slate-900/50 relative" style="min-height: 200px;">
                    <SimpleNavbar BrandName="Meraki UI">
                        <Links>
                            <NavbarLink Href="#" IsActive="true">Home</NavbarLink>
                            <NavbarLink Href="#">Features</NavbarLink>
                            <NavbarLink Href="#">Pricing</NavbarLink>
                            <NavbarLink Href="#">Contact</NavbarLink>
                        </Links>
                    </SimpleNavbar>
                </div>
            </div>

            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Navbar with Search</h3>
                <div class="border border-slate-800 rounded-xl overflow-hidden bg-slate-900/50 relative" style="min-height: 200px;">
                    <NavbarWithSearch BrandName="Meraki UI">
                        <Links>
                            <NavbarLink Href="#" IsActive="true">Dashboard</NavbarLink>
                            <NavbarLink Href="#">Settings</NavbarLink>
                            <NavbarLink Href="#">Profile</NavbarLink>
                        </Links>
                    </NavbarWithSearch>
                </div>
            </div>
        </div>
    </section>

    <!-- Sidebars Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Sidebars</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="space-y-8">
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Simple Sidebar</h3>
                <div class="border border-slate-800 rounded-xl overflow-hidden bg-slate-900/50 flex justify-center p-4" style="min-height: 400px;">
                    <SimpleSidebar BrandName="Electra">
                        <div class="space-y-3">
                            <a class="flex items-center px-3 py-2 text-gray-600 transition-colors duration-300 transform rounded-lg dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700" href="#">Dashboard</a>
                            <a class="flex items-center px-3 py-2 text-gray-600 transition-colors duration-300 transform rounded-lg dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700" href="#">Projects</a>
                        </div>
                    </SimpleSidebar>
                </div>
            </div>
        </div>
    </section>

    <!-- Footers Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Footers</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="space-y-8">
            <SimpleFooter BrandName="Electra.MerakiUI" />
        </div>
    </section>

    <!-- Breadcrumbs Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Breadcrumbs</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
            <Breadcrumb>
                <BreadcrumbItem Text="Home" Url="/" ShowSeparator="false" />
                <BreadcrumbItem Text="Components" Url="/components" />
                <BreadcrumbItem Text="Showcase" Url="#" IsActive="true" />
            </Breadcrumb>
        </div>
    </section>

    <!-- Pagination Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Pagination</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
            <PaginationControl CurrentPage="3" TotalPages="10" />
        </div>
    </section>

    <!-- Skeletons Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Skeletons</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <SkeletonCard />
            <SkeletonCard />
            <SkeletonCard />
        </div>
    </section>

    <!-- Tooltips Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Tooltips</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="p-16 border border-slate-800 rounded-xl bg-slate-900/50 flex flex-wrap justify-center gap-12">
            <Tooltip Text="Tooltip on Top" Position="TooltipPosition.Top">
                <PrimaryButton>Top</PrimaryButton>
            </Tooltip>
            <Tooltip Text="Tooltip on Right" Position="TooltipPosition.Right">
                <PrimaryButton>Right</PrimaryButton>
            </Tooltip>
            <Tooltip Text="Tooltip on Bottom" Position="TooltipPosition.Bottom">
                <PrimaryButton>Bottom</PrimaryButton>
            </Tooltip>
            <Tooltip Text="Tooltip on Left" Position="TooltipPosition.Left">
                <PrimaryButton>Left</PrimaryButton>
            </Tooltip>
        </div>
    </section>

    <!-- Cards Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Cards</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Article Card</h3>
                <ArticleCard Category="Design" 
                             Title="Modern UI Design Principles" 
                             Description="Learn how to create beautiful and functional user interfaces using the latest design trends."
                             Date="Dec 28, 2025" />
            </div>
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Product Card</h3>
                <ProductCard Title="Wireless Headphones" 
                             Price="$199" 
                             ImageUrl="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" />
            </div>
        </div>
    </section>

    <!-- Blog Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Blog Sections</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <BlogSection Title="From the Blog" 
                     Description="Stay updated with the latest news and articles from our team."
                     Columns="3">
            <BlogCard Title="Getting Started with Blazor"
                      Excerpt="A comprehensive guide to building modern web applications with Blazor and .NET."
                      Date="Dec 30, 2025"
                      ImageUrl="https://images.unsplash.com/photo-1517694712202-14dd9538aa97?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" />
            <BlogCard Title="Tailwind CSS Tips"
                      Excerpt="Advanced techniques for styling your components with Tailwind CSS utility classes."
                      Date="Dec 29, 2025"
                      ImageUrl="https://images.unsplash.com/photo-1587620962725-abab7fe55159?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" />
            <BlogCard Title="Building RCL Libraries"
                      Excerpt="How to share components across multiple projects using Razor Class Libraries."
                      Date="Dec 28, 2025"
                      ImageUrl="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" />
        </BlogSection>
    </section>

    <!-- Portfolio Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Portfolio</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <PortfolioCard Title="Project One" Category="Web Development" ImageUrl="https://images.unsplash.com/photo-1517694712202-14dd9538aa97?auto=format&fit=crop&w=800&q=60" />
            <PortfolioCard Title="Project Two" Category="Mobile Apps" ImageUrl="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?auto=format&fit=crop&w=800&q=60" />
            <PortfolioCard Title="Project Three" Category="UI/UX Design" ImageUrl="https://images.unsplash.com/photo-1586717791821-3f44a563eb4c?auto=format&fit=crop&w=800&q=60" />
        </div>
    </section>

    <!-- Testimonials Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Testimonials</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <TestimonialCard Content="Electra.MerakiUI has transformed how we build dashboards. The components are intuitive and easy to customize."
                             AuthorName="John Doe"
                             AuthorRole="Lead Developer"
                             IsPrimary="true" />
            <TestimonialCard Content="The best UI library for Blazor I've used so far. Highly recommended for any serious project."
                             AuthorName="Jane Smith"
                             AuthorRole="Product Manager" />
        </div>
    </section>

    <!-- FAQ Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">FAQ</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <FaqAccordion Title="Frequently Asked Questions">
            <FaqItem Question="What is Electra.MerakiUI?" 
                     Answer="It's a comprehensive Blazor component library based on the Meraki UI design system, built for the Microbians ecosystem."
                     IsInitiallyOpen="true" />
            <FaqItem Question="Is it open source?" 
                     Answer="Yes, it's open source and free to use for all Microbians projects." />
            <FaqItem Question="Does it support dark mode?" 
                     Answer="Yes, all components are built with dark mode as the primary visual identity." />
        </FaqAccordion>
    </section>

    <!-- Cookies Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Cookie Banners</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="relative" style="min-height: 200px;">
            <CookieBanner Message="We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies." />
        </div>
    </section>

    <!-- Interactive Elements Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Interactive Elements</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Dropdowns</h3>
                <div class="flex flex-wrap gap-4">
                    <SimpleDropdown TriggerText="Options">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 capitalize transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white">Profile</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 capitalize transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white">Settings</a>
                    </SimpleDropdown>
                    <DropdownWithIcons TriggerText="User Menu">
                        <a href="#" class="flex items-center p-3 -mt-2 text-sm text-gray-600 transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white">
                            <span class="mx-1">View Profile</span>
                        </a>
                    </DropdownWithIcons>
                </div>
            </div>

            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Modals</h3>
                <div class="flex flex-wrap gap-4">
                    <SimpleModal TriggerText="Open Simple Modal">
                        <div class="text-center">
                            <h3 class="text-lg font-medium text-gray-800 dark:text-white">Modal Title</h3>
                            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">This is a simple modal demonstration.</p>
                        </div>
                    </SimpleModal>
                    <ModalWithAction TriggerText="Open Action Modal">
                        <div class="text-center">
                            <h3 class="text-lg font-medium text-gray-800 dark:text-white">Payment Successful</h3>
                            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Your transaction was completed successfully.</p>
                        </div>
                    </ModalWithAction>
                </div>
            </div>
        </div>

        <div class="mt-8 p-8 border border-slate-800 rounded-xl bg-slate-900/50">
            <h3 class="text-lg font-medium text-slate-300 mb-6">Tabs</h3>
            <SimpleTabs Headers='new[] { "Home", "Profile", "Settings" }'>
                <div class="p-4 text-slate-400">Home Content</div>
                <div class="p-4 text-slate-400">Profile Content</div>
                <div class="p-4 text-slate-400">Settings Content</div>
            </SimpleTabs>
        </div>
    </section>

    <!-- Marketing Sections Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Marketing Sections</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="space-y-12">
            <FeatureSection>
                <FeatureItem Title="Fast Performance" Description="Our components are optimized for speed and lightweight delivery.">
                    <IconContent>
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                    </IconContent>
                </FeatureItem>
                <FeatureItem Title="Fully Responsive" Description="Works beautifully on any screen size, from mobile to desktop.">
                    <IconContent>
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
                    </IconContent>
                </FeatureItem>
            </FeatureSection>

            <CTASection Title="Ready to build something amazing?" 
                        Description="Join thousands of developers using Electra.MerakiUI to build modern web applications."
                        ButtonText="Get Started Now"
                        ButtonUrl="#" />

            <PricingSection Title="Simple Pricing" Description="Choose the plan that's right for your business." />
        </div>
    </section>

    <!-- Auth & Forms Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Auth & Forms</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Sign In Card</h3>
                <SignInCard Title="Welcome Back" Subtitle="Please enter your details." />
            </div>
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Contact Form</h3>
                <ContactForm Title="Get in touch" Description="Our friendly team is always here to chat." />
            </div>
        </div>
    </section>

    <!-- Specialized Layouts Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Specialized Layouts</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="space-y-12">
            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Hero with Form</h3>
                <div class="border border-slate-800 rounded-xl overflow-hidden">
                    <HeroWithForm Title="Build your next project faster" 
                                  Description="A beautiful hero section with an integrated newsletter signup form." />
                </div>
            </div>

            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Team Section</h3>
                <div class="grid md:grid-cols-3 gap-8">
                    <TeamCard Name="Alice Johnson" Role="CEO & Founder" />
                    <TeamCard Name="Bob Smith" Role="Software Engineer" />
                    <TeamCard Name="Charlie Brown" Role="UI Designer" />
                </div>
            </div>

            <div>
                <h3 class="text-lg font-medium text-slate-300 mb-4">Error Pages (404)</h3>
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="border border-slate-800 rounded-xl overflow-hidden scale-75 origin-top">
                        <Simple404 Title="Page not found" Description="Sorry, the page you are looking for doesn't exist." />
                    </div>
                    <div class="border border-slate-800 rounded-xl overflow-hidden scale-75 origin-top">
                        <Centered404 Title="Lost in space" Description="The page you requested was not found." />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Email Templates Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Email Templates</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="border border-slate-800 rounded-xl p-8 bg-white">
            <EmailVerification UserName="Developer" 
                               VerificationCode="123456" 
                               TeamName="Electra Team" 
                               RecipientEmail="dev@example.com" />
        </div>
    </section>

    <!-- Buttons Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Buttons</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Primary Buttons</h3>
                <div class="flex flex-wrap gap-4">
                    <PrimaryButton>Default Primary</PrimaryButton>
                    <PrimaryButton Class="bg-purple-600 hover:bg-purple-500">Purple Variant</PrimaryButton>
                    <PrimaryButton Class="bg-emerald-600 hover:bg-emerald-500">Success Variant</PrimaryButton>
                </div>
            </div>

            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Button Groups</h3>
                <div class="flex flex-wrap gap-4">
                    <ButtonGroup>
                        <ButtonGroupItem>Left</ButtonGroupItem>
                        <ButtonGroupItem>Center</ButtonGroupItem>
                        <ButtonGroupItem>Right</ButtonGroupItem>
                    </ButtonGroup>
                </div>
            </div>
        </div>
    </section>

    <!-- Alerts Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Alerts</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid gap-6">
            <Alert Type="AlertType.Success" Title="Success">
                Your changes have been saved successfully.
            </Alert>

            <Alert Type="AlertType.Info" Title="Information">
                Please review the latest updates in your dashboard.
            </Alert>

            <Alert Type="AlertType.Warning" Title="Warning">
                Your subscription will expire in 3 days.
            </Alert>

            <Alert Type="AlertType.Error" Title="Error">
                Something went wrong. Please try again later.
            </Alert>
        </div>
    </section>

    <!-- Avatars Section -->
    <section>
        <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl font-bold text-white">Avatars</h2>
            <div class="h-px flex-1 bg-slate-800"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Individual Avatars</h3>
                <div class="flex flex-wrap items-center gap-4">
                    <Avatar Size="AvatarSize.Xs" />
                    <Avatar Size="AvatarSize.Sm" />
                    <Avatar Size="AvatarSize.Md" ShowStatus="true" />
                    <Avatar Size="AvatarSize.Lg" ShowStatus="true" StatusColor="bg-red-500" />
                    <Avatar Size="AvatarSize.Xl" Shape="AvatarShape.Square" />
                </div>
            </div>

            <div class="p-8 border border-slate-800 rounded-xl bg-slate-900/50">
                <h3 class="text-lg font-medium text-slate-300 mb-6">Avatar Groups</h3>
                <AvatarGroup GroupSize="AvatarSize.Sm">
                    <Avatar />
                    <Avatar />
                    <Avatar />
                    <Avatar />
                </AvatarGroup>
            </div>
        </div>
    </section>
</div>
