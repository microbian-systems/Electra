@page "/meraki-showcase"
@using Electra.MerakiUI.Areas.Demo.Pages
@model Electra.MerakiUI.Areas.Demo.Pages.MerakiShowcaseModel
@{
    ViewData["Title"] = "Meraki UI Showcase";
}

<div class="container mx-auto px-4 py-12">
    <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-white mb-4">Meraki UI Component Showcase</h1>
        <p class="text-slate-400 max-w-2xl mx-auto">
            A collection of integrated UI components from the Electra.MerakiUI library, 
            styled with Tailwind CSS and ready for use in Microbians projects.
        </p>
    </div>

    <component type="typeof(MerakiShowcase)" render-mode="Static" />
</div>