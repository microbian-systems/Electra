@inherits MerakiComponentBase

<div x-data="{ isVisible: false }" 
     @@mouseenter="isVisible = true" 
     @@mouseleave="isVisible = false"
     class="relative inline-block @Class" 
     id="@Id" 
     @attributes="AdditionalAttributes">
    
    @ChildContent

    <div x-show="isVisible" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 translate-y-1"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 translate-y-1"
         class="absolute z-50 @GetPositionClass() w-48 px-5 py-3 text-center text-gray-600 truncate bg-white rounded-lg shadow-lg dark:shadow-none shadow-gray-200 dark:bg-gray-800 dark:text-white">
        @Text
    </div>
</div>
