@using Aero.Cms.Services
@model PageRenderContext
@inject IBlockRenderer BlockRenderer

@{
    ViewData["Title"] = Model.Page.Metadata.Title;
}

<div class="Aero-page">
    @foreach (var block in Model.Page.Blocks)
    {
        @await BlockRenderer.RenderBlockAsync(Html, block, Model)
    }
</div>
