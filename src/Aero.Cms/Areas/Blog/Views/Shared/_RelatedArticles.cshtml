@model IEnumerable<Aero.Cms.Areas.Blog.Models.ArticleViewModel>

@if (Model != null && Model.Any())
{
    <aside aria-label="Related articles" class="py-8 lg:py-24 bg-gray-50 dark:bg-gray-800 rounded-xl mt-12 px-4">
        <div class="max-w-screen-xl mx-auto">
            <h2 class="mb-8 text-2xl font-bold text-gray-900 dark:text-white">Related articles</h2>
            <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-3">
                @foreach (var article in Model)
                {
                    <article class="max-w-xs group">
                        <a asp-action="Article" asp-route-slug="@article.Slug">
                            <img src="@(article.ThumbnailUrl ?? "/assets/img/blog-placeholder.jpg")" class="mb-5 rounded-lg shadow-sm hover:shadow-md transition-shadow object-cover h-48 w-full" alt="@article.Title">
                        </a>
                        <h2 class="mb-2 text-xl font-bold leading-tight text-gray-900 dark:text-white group-hover:text-primary-600 transition-colors">
                            <a asp-action="Article" asp-route-slug="@article.Slug">@article.Title</a>
                        </h2>
                        <p class="mb-4 text-gray-500 dark:text-gray-400 line-clamp-3">@article.Excerpt</p>
                        <a asp-action="Article" asp-route-slug="@article.Slug" class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline">
                            Read more
                            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </a>
                    </article>
                }
            </div>
        </div>
    </aside>
}
