@model Aero.Cms.Models.SiteDocument
@{
    bool isNew = string.IsNullOrEmpty(Model.Id) || Model.Id == "new";
    ViewData["Title"] = isNew ? "Add New Site" : $"Edit Site - {Model.Name}";
}

<div class="container mx-auto px-4 py-8">
    <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a asp-action="Index" class="text-blue-600 hover:text-blue-900">Sites</a>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">@(isNew ? "Add New" : "Edit")</span>
                </div>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold mb-6">@(isNew ? "Add New Site" : $"Edit Site: {Model.Name}")</h1>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form asp-action="SaveSite" asp-route-siteId="@(isNew ? "new" : Model.Id)" method="post">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Name">
                    Site Name
                </label>
                <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="hostnamesRaw">
                    Hostnames (comma separated)
                </label>
                <input type="text" name="hostnamesRaw" value="@string.Join(", ", Model.Hostnames)" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="localhost, example.com">
                <p class="text-gray-600 text-xs mt-1">Separate multiple hostnames with commas.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="DefaultCulture">
                        Default Culture
                    </label>
                    <input asp-for="DefaultCulture" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="en-US">
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Theme">
                        Theme
                    </label>
                    <input asp-for="Theme" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="default">
                </div>
            </div>

            <div class="flex items-center justify-end">
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800 mr-4">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Save Site
                </button>
            </div>
        </form>
    </div>
</div>