@model PageEditViewModel
@{
    ViewData["Title"] = $"Preview - {Model.Page.Metadata.Title}";
}

<div class="mb-4 flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-gray-900">Preview: @Model.Page.Metadata.Title</h1>
    <a href="/cms-admin/page/@Model.Page.Id/edit" class="text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 font-medium rounded-lg text-sm px-5 py-2.5">
        Back to Editor
    </a>
</div>

<div class="bg-white shadow rounded-lg p-6">
    <div class="border-4 border-dashed border-gray-200 rounded-lg h-96 flex items-center justify-center">
        @* Integration point for Blazor PagePreview component *@
        <component type="typeof(Aero.Cms.Components.PagePreview)" render-mode="ServerPrerendered" param-Page="Model.Page" param-Site="Model.Site" />
    </div>
</div>
