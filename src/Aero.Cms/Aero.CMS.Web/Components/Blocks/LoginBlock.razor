@using Aero.CMS.Core.Content.Models.Blocks
@namespace Aero.CMS.Web.Components.Blocks

<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
    @if (!string.IsNullOrEmpty(Block?.Title))
    {
        <h2 class="text-2xl font-bold text-gray-800 mb-4">@Block.Title</h2>
    }

    <div class="space-y-4">
        @if (_showSuccessMessage)
        {
            <div class="p-3 bg-green-50 border border-green-200 text-green-700 rounded">
                Login successful! Redirecting...
            </div>
        }
        @if (_showErrorMessage)
        {
            <div class="p-3 bg-red-50 border border-red-200 text-red-700 rounded">
                Invalid credentials. Please try again.
            </div>
        }

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input type="email" id="email" @bind="_email" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                   placeholder="you@example.com" />
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input type="password" id="password" @bind="_password" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                   placeholder="••••••••" />
        </div>

        @if (Block?.ShowForgotPasswordLink == true)
        {
            <div class="text-right">
                <a href="/forgot-password" class="text-sm text-blue-600 hover:text-blue-800">Forgot password?</a>
            </div>
        }

        <button @onclick="HandleLogin" 
                class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Sign In
        </button>

        @if (Block?.AuthenticationMode == "Mock")
        {
            <div class="mt-4 p-3 bg-gray-50 border border-gray-200 rounded text-sm text-gray-600">
                <p class="font-medium">Mock Mode Active</p>
                <p class="mt-1">This login form is in mock mode. Click "Sign In" to simulate a successful login.</p>
                <div class="mt-2 flex gap-2">
                    <button @onclick="SimulateSuccess" class="px-3 py-1 text-sm bg-green-100 text-green-800 rounded">Simulate Success</button>
                    <button @onclick="SimulateError" class="px-3 py-1 text-sm bg-red-100 text-red-800 rounded">Simulate Error</button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public LoginBlock? Block { get; set; }

    private string _email = "";
    private string _password = "";
    private bool _showSuccessMessage = false;
    private bool _showErrorMessage = false;

    private void HandleLogin()
    {
        if (Block?.AuthenticationMode == "Mock")
        {
            // Mock authentication - always succeed
            _showSuccessMessage = true;
            _showErrorMessage = false;
            // In a real implementation, you would redirect
            if (!string.IsNullOrEmpty(Block.RedirectUrl))
            {
                // navigationManager.NavigateTo(Block.RedirectUrl);
            }
        }
        else
        {
            // Real authentication would be implemented here
            // For now, simulate validation
            if (!string.IsNullOrEmpty(_email) && !string.IsNullOrEmpty(_password))
            {
                _showSuccessMessage = true;
                _showErrorMessage = false;
            }
            else
            {
                _showSuccessMessage = false;
                _showErrorMessage = true;
            }
        }
    }

    private void SimulateSuccess()
    {
        _showSuccessMessage = true;
        _showErrorMessage = false;
    }

    private void SimulateError()
    {
        _showSuccessMessage = false;
        _showErrorMessage = true;
    }
}