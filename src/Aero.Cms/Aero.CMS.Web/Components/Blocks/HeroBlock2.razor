@using Aero.CMS.Core.Content.Models.Blocks
@using Model = Aero.CMS.Core.Content.Models.Blocks
@namespace Aero.CMS.Web.Components.Blocks

<div class="px-4 py-16 md:py-24 lg:py-32"
     style="background-color: @Block?.BackgroundColor; color: @Block?.TextColor">
    <div class="container mx-auto max-w-4xl text-center">
        @if (!string.IsNullOrEmpty(Block?.Title))
        {
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4">@Block.Title</h1>
        }
        @if (!string.IsNullOrEmpty(Block?.Subtitle))
        {
            <p class="text-xl md:text-2xl opacity-90 mb-8">@Block.Subtitle</p>
        }
        @if (!string.IsNullOrEmpty(Block?.CallToActionText) && !string.IsNullOrEmpty(Block?.CallToActionUrl))
        {
            <a href="@Block.CallToActionUrl"
               class="inline-block px-8 py-3 text-lg font-semibold rounded-lg transition-all duration-200"
               style="background-color: @Block.TextColor; color: @Block.BackgroundColor">
                @Block.CallToActionText
            </a>
        }
    </div>
</div>

@code {
    [Parameter]
    public Aero.CMS.Core.Content.Models.Blocks.HeroBlock2? Block { get; set; }
}