@using Aero.CMS.Core.Content.Models.Blocks
@namespace Aero.CMS.Web.Components.Blocks

<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
    @if (!string.IsNullOrEmpty(Block?.Title))
    {
        <h2 class="text-2xl font-bold text-gray-800 mb-4">@Block.Title</h2>
    }

    <div class="space-y-4">
        @if (_showSuccessMessage)
        {
            <div class="p-3 bg-green-50 border border-green-200 text-green-700 rounded">
                @(string.IsNullOrEmpty(Block?.SuccessMessage) ? "Check your email for password reset instructions." : Block.SuccessMessage)
            </div>
        }
        @if (_showErrorMessage)
        {
            <div class="p-3 bg-red-50 border border-red-200 text-red-700 rounded">
                @(string.IsNullOrEmpty(Block?.ErrorMessage) ? "An error occurred. Please try again." : Block.ErrorMessage)
            </div>
        }

        @if (!_showSuccessMessage)
        {
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    @(string.IsNullOrEmpty(Block?.EmailFieldLabel) ? "Email Address" : Block.EmailFieldLabel)
                </label>
                <input type="email" id="email" @bind="_email" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       placeholder="you@example.com" />
            </div>

            <button @onclick="HandleSubmit" 
                    disabled="@(_isSubmitting || string.IsNullOrEmpty(_email))"
                    class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                @(_isSubmitting ? "Sending..." : "Send Reset Instructions")
            </button>
        }
        else
        {
            <div class="text-center">
                <p class="text-gray-600 mb-4">If an account exists with that email, you will receive password reset instructions shortly.</p>
                <a href="/login" class="inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">Back to Login</a>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public ForgotPasswordBlock? Block { get; set; }

    private string _email = "";
    private bool _showSuccessMessage = false;
    private bool _showErrorMessage = false;
    private bool _isSubmitting = false;

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        _showSuccessMessage = false;
        _showErrorMessage = false;

        // Simulate API call
        await Task.Delay(800);

        if (!string.IsNullOrEmpty(_email) && _email.Contains("@"))
        {
            _showSuccessMessage = true;
        }
        else
        {
            _showErrorMessage = true;
        }

        _isSubmitting = false;
    }
}