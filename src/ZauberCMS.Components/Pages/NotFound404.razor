@using Microsoft.AspNetCore.Http
@implements ZauberCMS.Core.Content.Interfaces.IContentView
@layout BlankLayout

<PageTitle>404 - Page Not Found</PageTitle>

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="error-container p-5 rounded-4 shadow-lg">
                <div class="error-icon mb-4">
                    <span class="display-1">404</span>
                </div>
                <h1 class="error-title mb-3">Page Not Found!</h1>
                <p class="error-message lead mb-4">
                    The page you are looking for does not exist or has been moved.
                </p>
                <a href="/" class="btn btn-primary btn-lg px-5">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
        color: white;
    }
    .error-icon {
        font-weight: 900;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    .error-title {
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    .btn-primary {
        background-color: white;
        color: #ee5a5a;
        border: none;
        font-weight: 600;
    }
    .btn-primary:hover {
        background-color: #f8f9fa;
        color: #dc3545;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>

@code {
    [CascadingParameter] private HttpContext? HttpContext { get; set; }
    protected override void OnInitialized()
    {
        if (HttpContext != null)
        {
            HttpContext.Response.StatusCode = StatusCodes.Status404NotFound;
        }
    }

    [Parameter] public Content? Content { get; set; }
    [Parameter] public Dictionary<string, string>? LanguageKeys { get; set; }
}
