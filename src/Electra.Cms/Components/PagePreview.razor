@using Electra.Cms.Models
@using Electra.Cms.Services
@inject IBlockRenderer BlockRenderer
@inject NavigationManager NavigationManager

<div class="cms-preview">
    @if (Page != null && Site != null)
    {
        var context = new PageRenderContext(Site, Page, true);
        @foreach (var block in Page.Blocks)
        {
            @* Rendering blocks in Blazor is a bit different if they are Razor Partials *@
            @* We might need a Blazor equivalent or a bridge *@
            <div class="block-preview">
                @* Placeholder for block rendering in Blazor *@
                <div class="p-4 border-b border-dashed border-gray-300">
                    <span class="text-xs text-gray-400">Block: @block.Type</span>
                    @* In a real implementation, we'd have Blazor components for each block *@
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public PageDocument Page { get; set; }
    [Parameter] public SiteDocument Site { get; set; }
}
