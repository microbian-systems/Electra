@model IEnumerable<SiteDocument>
@{
    ViewData["Title"] = "CMS Admin - Sites";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">CMS Administration</h1>
        <div class="space-x-2">
            <a asp-action="ImportBlogs" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Import Blogs
            </a>
            <a asp-action="AddSite" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Add New Site
            </a>
        </div>
    </div>

    <div class="bg-white shadow-md rounded my-6 overflow-hidden">
        <table class="text-left w-full border-collapse">
            <thead>
                <tr>
                    <th class="py-4 px-6 bg-gray-50 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Site Name</th>
                    <th class="py-4 px-6 bg-gray-50 font-bold uppercase text-sm text-gray-600 border-b border-gray-200">Hostnames</th>
                    <th class="py-4 px-6 bg-gray-50 font-bold uppercase text-sm text-gray-600 border-b border-gray-200 text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var site in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="py-4 px-6 border-b border-gray-200">@site.Name</td>
                        <td class="py-4 px-6 border-b border-gray-200">
                            @foreach (var host in site.Hostnames)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                                    @host
                                </span>
                            }
                        </td>
                        <td class="py-4 px-6 border-b border-gray-200 text-right space-x-2">
                            <a asp-action="Pages" asp-route-siteId="@site.Id" class="inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Pages
                            </a>
                            <a asp-action="EditSite" asp-route-siteId="@site.Id" class="inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Edit
                            </a>
                            <form asp-action="DeleteSite" asp-route-siteId="@site.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this site?');">
                                <button type="submit" class="inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>