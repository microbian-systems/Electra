@using Electra.Models.Entities
@model ElectraUser
@{
    ViewData["Title"] = "My Settings";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">My Settings</h1>

    @if (ViewData["StatusMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@ViewData["StatusMessage"]</span>
        </div>
    }

    <div asp-validation-summary="All" class="text-red-600 mb-4"></div>

    <form asp-action="SaveMySettings" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        @Html.AntiForgeryToken()
        
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="FirstName">
                First Name
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                   asp-for="FirstName" placeholder="First Name">
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="LastName">
                Last Name
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                   asp-for="LastName" placeholder="Last Name">
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Email">
                Email
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                   asp-for="Email" type="email" placeholder="Email">
        </div>

        <hr class="my-6 border-t border-gray-200" />

        <h2 class="text-xl font-bold mb-4">Change Password</h2>
        <p class="text-sm text-gray-600 mb-4">Leave new password blank if you don't want to change it.</p>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="currentPassword">
                Current Password
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                   name="currentPassword" id="currentPassword" type="password" placeholder="******************">
        </div>

        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="newPassword">
                New Password
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                   name="newPassword" id="newPassword" type="password" placeholder="******************">
        </div>

        <div class="flex items-center justify-between">
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Save Settings
            </button>
        </div>
    </form>
</div>
