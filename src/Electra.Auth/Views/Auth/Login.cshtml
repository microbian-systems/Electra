@model Electra.Auth.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_AuthLayout";
}

<h1>Sign In</h1>

<form asp-action="LoginForm" asp-controller="Auth" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>
            <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
        </label>
    </div>
    
    <button type="submit">Sign In</button>
    
    <div class="mt-3 text-center">
        <a asp-action="ForgotPasswordPage">Forgot password?</a> | 
        <a asp-action="RegisterPage">Register</a>
    </div>

    <hr />
    
    <div class="social-login text-center">
        <p>Or continue with</p>
        <a href="/login-passkey?returnUrl=@Model.ReturnUrl" class="d-block mb-3">Sign in with Passkey</a>
        <!-- Add other providers here if needed -->
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
