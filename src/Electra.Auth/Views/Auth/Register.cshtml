@model Electra.Auth.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<h1>Register</h1>

<form asp-action="Register" asp-controller="Auth" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>
            <input asp-for="AcceptTerms" /> I accept the Terms of Service
        </label>
        <span asp-validation-for="AcceptTerms" class="text-danger"></span>
    </div>
    
    <button type="submit">Register</button>
    
    <div class="mt-3 text-center">
        <a asp-action="LoginPage">Already have an account? Sign in</a>
    </div>

    <hr />
    
    <div class="social-login text-center">
        <p>Or register with</p>
        <div class="d-grid gap-2">
            <a href="/login-passkey?returnUrl=@ViewBag.ReturnUrl" class="d-block mb-2 btn btn-outline-primary">Register with Passkey</a>
            <a href="/api/auth/external/challenge/Google?returnUrl=@ViewBag.ReturnUrl" class="d-block mb-2">Register with Google</a>
            <a href="/api/auth/external/challenge/Microsoft?returnUrl=@ViewBag.ReturnUrl" class="d-block mb-2">Register with Microsoft</a>
            <a href="/api/auth/external/challenge/Facebook?returnUrl=@ViewBag.ReturnUrl" class="d-block mb-2">Register with Facebook</a>
            <a href="/api/auth/external/challenge/Twitter?returnUrl=@ViewBag.ReturnUrl" class="d-block mb-2">Register with Twitter</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
