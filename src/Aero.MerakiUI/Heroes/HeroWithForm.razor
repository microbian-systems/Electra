@inherits MerakiComponentBase

<div class="container px-6 py-16 mx-auto text-center @Class" id="@Id" @attributes="AdditionalAttributes">
    <div class="max-w-lg mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">@Title</h1>
        <p class="mt-6 text-gray-500 dark:text-gray-300">@Description</p>
        
        <div class="w-full max-w-sm mx-auto mt-6 bg-transparent border rounded-md dark:border-gray-700 focus-within:border-blue-400 focus-within:ring focus-within:ring-blue-300 dark:focus-within:border-blue-300 focus-within:ring-opacity-40">
            <form class="flex flex-col md:flex-row">
                <input type="email" placeholder="@InputPlaceholder" class="flex-1 h-10 px-4 py-2 m-1 text-gray-700 placeholder-gray-400 bg-transparent border-none appearance-none dark:text-gray-200 focus:outline-none focus:placeholder-transparent focus:ring-0" /> 
                <button type="button" class="h-10 px-4 py-2 m-1 text-white transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                    @ButtonText
                </button>
            </form>
        </div>
    </div>
</div>
