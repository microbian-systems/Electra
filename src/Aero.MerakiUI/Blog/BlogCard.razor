@inherits MerakiComponentBase

<div class="@Class" id="@Id" @attributes="AdditionalAttributes">
    <img class="relative z-10 object-cover w-full rounded-md h-96" src="@ImageUrl" alt="@ImageAlt">

    <div class="relative z-20 max-w-lg p-6 mx-auto -mt-20 bg-white rounded-md shadow dark:bg-gray-900">
        <a href="@Url" class="font-semibold text-gray-800 hover:underline dark:text-white md:text-xl">
            @Title
        </a>

        <p class="mt-3 text-sm text-gray-500 dark:text-gray-300 md:text-sm">
            @Excerpt
        </p>

        <p class="mt-3 text-sm text-blue-500">@Date</p>
    </div>
</div>
