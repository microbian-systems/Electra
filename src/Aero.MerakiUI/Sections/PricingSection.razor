@inherits MerakiComponentBase

<section class="bg-white dark:bg-gray-900 @Class" id="@Id" @attributes="AdditionalAttributes">
    <div class="container px-6 py-8 mx-auto">
        <div class="flex flex-col items-center justify-center text-center">
            <h1 class="text-2xl font-semibold text-gray-800 lg:text-3xl dark:text-white">@Title</h1>
            <p class="max-w-lg mt-4 text-gray-500 dark:text-gray-300">@Description</p>
        </div>

        <div class="grid gap-6 mt-16 -mx-6 sm:gap-8 lg:grid-cols-3 xl:grid-cols-3">
            <!-- Basic Plan -->
            <div class="flex flex-col items-center px-6 py-8 transition-colors duration-300 transform rounded-lg cursor-pointer bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700">
                <p class="text-lg font-medium text-gray-800 dark:text-gray-100">Basic</p>
                <h4 class="mt-2 text-4xl font-semibold text-gray-800 dark:text-gray-100">$0</h4>
                <p class="mt-4 text-gray-500 dark:text-gray-300">Free forever</p>
                <button class="w-full px-4 py-2 mt-10 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">Start Free</button>
            </div>

            <!-- Premium Plan -->
            <div class="flex flex-col items-center px-6 py-8 transition-colors duration-300 transform rounded-lg cursor-pointer bg-blue-600 dark:bg-blue-600">
                <p class="text-lg font-medium text-white">Premium</p>
                <h4 class="mt-2 text-4xl font-semibold text-white">$49</h4>
                <p class="mt-4 text-gray-100">Best for small teams</p>
                <button class="w-full px-4 py-2 mt-10 font-medium tracking-wide text-blue-600 capitalize transition-colors duration-300 transform bg-white rounded-md hover:bg-gray-100 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-80">Buy Now</button>
            </div>

            <!-- Enterprise Plan -->
            <div class="flex flex-col items-center px-6 py-8 transition-colors duration-300 transform rounded-lg cursor-pointer bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700">
                <p class="text-lg font-medium text-gray-800 dark:text-gray-100">Enterprise</p>
                <h4 class="mt-2 text-4xl font-semibold text-gray-800 dark:text-gray-100">$99</h4>
                <p class="mt-4 text-gray-500 dark:text-gray-300">Advanced features</p>
                <button class="w-full px-4 py-2 mt-10 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">Contact Us</button>
            </div>
        </div>
    </div>
</section>
