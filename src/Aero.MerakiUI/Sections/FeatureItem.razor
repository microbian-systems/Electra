@inherits MerakiComponentBase

<div class="@Class" id="@Id" @attributes="AdditionalAttributes">
    @if (IconContent != null)
    {
        @IconContent
    }
    else
    {
        <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-full dark:text-white dark:bg-blue-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </span>
    }

    <h1 class="mt-4 text-xl font-semibold text-gray-800 dark:text-white">@Title</h1>

    <p class="mt-2 text-gray-500 dark:text-gray-400">@Description</p>
</div>
